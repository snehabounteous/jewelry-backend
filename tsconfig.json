{
  "compilerOptions": {
    "module": "nodenext",            
    "moduleResolution": "NodeNext",  
    "target": "ES2020",              
    "outDir": "dist",                
    "rootDir": "src",                
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            
    "sourceMap": true,               
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "tests/**/*", "src/test-setup.ts"],
  "exclude": ["node_modules", "dist"]
}